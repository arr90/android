<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--
    <item android:state_focused="false" android:drawable="@color/zyellow" />
-->

    <item android:state_selected="true" android:drawable="@color/pressed_color"/>
    <item android:drawable="@color/default_color" />

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_focused="true"  android:state_enabled="false" android:drawable="@color/zacqua" android:state_pressed="true"  />
    <item android:state_focused="true"  android:state_enabled="false" android:drawable="@color/zacqua" />

    <item android:state_focused="true"  android:state_pressed="true"  android:drawable="@color/zgray" />
    <item android:state_focused="false" android:state_pressed="true"  android:drawable="@color/zgray" />

    <item android:state_focused="true"  android:drawable="@color/zlima" />

</selector>